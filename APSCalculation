package cputapsscore;


import java.util.Scanner;
public class CPUTAPSscore {
    /* Calculate APS marks of the the six subjects */
    

    
    public static void main(String[] args) {
        Scanner r =new Scanner(System.in);
        
       int Homelang;
       System.out.println("Enter percentage of homelanguage: ");
       Homelang = r.nextInt();
       int FAL ;
       System.out.println("Enter percentage of FAL: ");
       FAL = r.nextInt();
       int Other1;
       System.out.println("Enter percentage of Other1: ");
       Other1 = r.nextInt();
       int Other2;
       System.out.println("Enter percentage of Other2: ");
       Other2 = r.nextInt();
       int Other3;
       System.out.println("Enter percentage of Other: ");
       Other3 = r.nextInt();
       int Other4 ;
       System.out.println("Enter percentage of Other4: ");
       Other4 = r.nextInt();

       
       int sum=Homelang+FAL+Other1+Other2+Other3+Other4;
       System.out.println("Total Marks"+sum);
       
       //You are not calculating average.
       double avg =sum/10;  //change variable name avg to aps
       System.out.println("Average marks"+ avg);
    }
}
